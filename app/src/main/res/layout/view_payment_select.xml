<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/payment_select_status_bar"
        android:layout_height="@dimen/record_table_row_height"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/account_category001"
            android:layout_width="@dimen/record_table_row_height"
            android:layout_height="@dimen/record_table_row_height"
            android:gravity="center"/>

        <TextView
            android:id="@+id/account_category002"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/record_table_row_height"
            android:layout_weight="3"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/account_category003"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/record_table_row_height"
            android:layout_weight="5"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/account_select_layout_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/account_select_layout_card_select_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/record_table_row_height"
                android:layout_weight="1"
                android:text="@string/account_select_layout_card"
                android:gravity="center" />

            <TextView
                android:id="@+id/account_select_layout_account_select_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/record_table_row_height"
                android:layout_weight="1"
                android:text="@string/account_select_layout_account"
                android:gravity="center" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/account_select_layout_card_select_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
            </ListView>

            <ListView
                android:id="@+id/account_select_layout_account_select_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
            </ListView>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>